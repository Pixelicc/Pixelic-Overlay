{
  "name": "pixelic-overlay",
  "description": "",
  "author": "Pixelic",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "vite build && electron .",
    "build": "electron-builder"
  },
  "build": {
    "productName": "Pixelic Overlay",
    "appId": "pixelic.overlay",
    "directories": {
      "output": "builds"
    },
    "win": {
      "icon": "src/assets/logo.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "license": "license.txt"
    },
    "linux": {
      "icon": "src/assets/logo.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "src/assets/logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@vueuse/electron": "^10.2.1",
    "axios": "^1.4.0",
    "axios-retry": "^3.5.1",
    "discord-rpc": "^4.0.1",
    "electron-store": "^8.1.0",
    "moment": "^2.29.4",
    "tail": "2.2.6",
    "vue": "^3.2.25",
    "vue-router": "^4.2.4",
    "vuetify": "^3.3.8"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.4",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0",
    "sass": "^1.63.6",
    "vite": "^2.9.16"
  }
}
